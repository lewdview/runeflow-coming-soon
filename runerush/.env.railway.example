# Railway Environment Variables
# Copy these to your Railway project environment variables

NODE_ENV=production
PORT=3000

# Database (Railway PostgreSQL - free tier)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Stripe (use test keys initially)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_MAIN=price_your_test_price_id_49usd
STRIPE_PRICE_ID_UPSELL=price_your_test_price_id_39usd

# File Storage (use Railway's built-in storage initially)
AWS_REGION=us-east-1
S3_BUCKET_NAME=railway-volume-storage
S3_BUCKET_REGION=us-east-1

# Email (use Railway's SMTP or free SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=support@yourdomain.com
FROM_NAME=RuneRush Support

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-now
ADMIN_PASSWORD=YourSecureAdminPassword2024!
DOWNLOAD_TOKEN_EXPIRY=24h
MAX_DOWNLOADS_PER_IP=3

# Frontend (your Netlify domain)
FRONTEND_URL=https://yourdomain.netlify.app

# Rate Limiting (reduced for free tier)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
